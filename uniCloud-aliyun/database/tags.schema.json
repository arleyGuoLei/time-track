{
  "bsonType": "object",
  "description": "标签集合",
  "required": ["name", "index"],
  "permission": {
    "read": true,
    "create": true,
    "update": "doc.user_id == auth.uid",
    "delete": "doc.user_id == auth.uid"
  },
  "properties": {
    "_id": {
      "description": "ID，系统自动生成"
    },
    "user_id": {
      "bsonType": "string",
      "description": "用户ID外键 users._id",
      "foreignKey": "uni-id-users._id",
      "forceDefaultValue": {
        "$env": "uid"
      }
    },
    "name": {
      "bsonType": "string",
      "description": "标签名称",
      "minLength": 1,
      "maxLength": 5,
      "label": "标签",
      "errorMessage": {
        "minLength": "{label}不能小于 {minLength} 个字符",
        "maxLength": "{label}不能多于 {maxLength} 个字符"
      }
    },
    "eventNumber": {
      "bsonType": "int",
      "description": "标签包含的事件总数",
      "defaultValue": 0
    },
    "index": {
      "bsonType": "int",
      "description": "用户的标签排序"
    },
    "status": {
      "bsonType": "int",
      "description": "标签状态：1 返回前端，0 不显示",
      "defaultValue": 1,
      "enum": [
        {
          "text": "已删除",
          "value": 0
        },
        {
          "text": "正常",
          "value": 1
        }
      ]
    },
    "create_time": {
      "bsonType": "timestamp",
      "description": "创建时间",
      "forceDefaultValue": {
        "$env": "now"
      }
    }
  }
}
