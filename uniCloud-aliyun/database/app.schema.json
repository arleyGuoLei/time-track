{
  "bsonType": "object",
  "description": "平台信息集合",
  "required": ["platform"],
  "permission": {
    "read": false,
    "create": false,
    "update": false,
    "delete": false
  },
  "properties": {
    "_id": {
      "description": "ID，系统自动生成"
    },
    "platform": {
      "bsonType": "string",
      "description": "平台"
    },
    "accessToken": {
      "bsonType": "string",
      "description": "小程序 access_token"
    },
    "expiresInTime": {
      "bsonType": "timestamp",
      "description": "access_token有效时间"
    },
    "create_time": {
      "bsonType": "timestamp",
      "description": "创建时间",
      "forceDefaultValue": {
        "$env": "now"
      }
    }
  }
}
