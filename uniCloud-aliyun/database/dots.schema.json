{
  "bsonType": "object",
  "description": "打点数据集合",
  "required": ["date", "time"],
  "permission": {
    "read": "doc.user_id == auth.uid",
    "create": true,
    "update": "doc.user_id == auth.uid",
    "delete": "doc.user_id == auth.uid"
  },
  "properties": {
    "_id": {
      "description": "ID，系统自动生成"
    },
    "user_id": {
      "bsonType": "string",
      "description": "用户ID外键 users._id",
      "foreignKey": "uni-id-users._id",
      "forceDefaultValue": {
        "$env": "uid"
      }
    },
    "event_id": {
      "bsonType": "string",
      "description": "打点的事件 外键关联",
      "foreignKey": "events._id"
    },
    "describe": {
      "bsonType": "string",
      "description": "打点备注",
      "minLength": 1,
      "maxLength": 1000,
      "label": "备注",
      "defaultValue": "通过长按完成的快速打点",
      "errorMessage": {
        "minLength": "{label}不能小于 {minLength} 个字符",
        "maxLength": "{label}不能多于 {maxLength} 个字符"
      }
    },
    "imageList": {
      "bsonType": "array",
      "description": "图片列表"
    },
    "date": {
      "bsonType": "string",
      "description": "打点日期"
    },
    "time": {
      "bsonType": "string",
      "description": "打点时间 hh:mm"
    },
    "dotTimestamp": {
      "bsonType": "timestamp",
      "description": "打点时间戳",
      "defaultValue": 0
    },
    "position": {
      "bsonType": "object",
			"description": "地理位置信息",
      "properties": {
        "point": {
          "bsonType": "object",
          "description": "GEO对象 Point(longitude: number, latitude: number)"
        },
        "address": {
          "bsonType": "string",
          "description": "位置信息 (省份/街道)"
        },
        "name": {
          "bsonType": "string",
          "description": "位置信息 (具体位置)"
        }
      }
    },
    "score": {
      "bsonType": "int",
      "description": "计算值",
      "defaultValue": 0
    },
    "status": {
      "bsonType": "int",
      "description": "打点状态：1 返回前端，0 不显示",
      "defaultValue": 1,
      "enum": [
        {
          "text": "已删除",
          "value": 0
        },
        {
          "text": "正常",
          "value": 1
        }
      ]
    },
    "create_time": {
      "bsonType": "timestamp",
      "description": "创建时间",
      "forceDefaultValue": {
        "$env": "now"
      }
    }
  }
}
