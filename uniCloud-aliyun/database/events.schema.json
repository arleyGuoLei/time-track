{
  "bsonType": "object",
  "description": "事件集合",
  "required": ["name", "index"],
  "permission": {
    "read": "doc.user_id == auth.uid",
    "create": true,
    "update": "doc.user_id == auth.uid",
    "delete": "doc.user_id == auth.uid"
  },
  "properties": {
    "_id": {
      "description": "ID，系统自动生成"
    },
    "user_id": {
      "bsonType": "string",
      "description": "用户ID外键 users._id",
      "foreignKey": "uni-id-users._id",
      "forceDefaultValue": {
        "$env": "uid"
      }
    },
    "eventName": {
      "bsonType": "string",
      "description": "事件名称",
      "minLength": 1,
      "maxLength": 12,
      "label": "事件名称",
      "errorMessage": {
        "minLength": "{label}不能小于 {minLength} 个字符",
        "maxLength": "{label}不能多于 {maxLength} 个字符"
      }
    },
    "iconSrc": {
      "bsonType": "string",
      "description": "事件图标图片id",
      "foreignKey": "icon_images._id"
    },
    "iconColor": {
      "bsonType": "string",
      "description": "事件图标颜色id",
      "foreignKey": "icon_colors._id"
    },
    "tags": {
      "bsonType": "array",
      "description": "事件标签ids",
      "title": "事件",
      "foreignKey": "tags._id"
    },
    "openCalc": {
      "bsonType": "bool",
      "description": "是否开启量化值"
    },
    "status": {
      "bsonType": "int",
      "description": "标签状态：1 返回前端，0 不显示",
      "defaultValue": 1,
      "enum": [
        {
          "text": "已删除",
          "value": 0
        },
        {
          "text": "正常",
          "value": 1
        }
      ]
    },
    "create_time": {
      "bsonType": "timestamp",
      "description": "创建时间",
      "forceDefaultValue": {
        "$env": "now"
      }
    }
  }
}
