{
  "bsonType": "object",
  "description": "图标颜色集合",
  "required": [],
  "permission": {
    "read": true,
    "create": false,
    "update": false,
    "delete": false
  },
  "properties": {
    "_id": {
      "description": "ID，系统自动生成"
    },
    "color": {
      "bsonType": "string",
      "description": "颜色值"
    },
    "status": {
      "bsonType": "int",
      "description": "颜色状态：1 返回前端，0 不显示",
      "defaultValue": 1,
      "enum": [
        {
          "text": "已删除",
          "value": 0
        },
        {
          "text": "正常",
          "value": 1
        }
      ]
    },
    "use_times": {
      "bsonType": "int",
      "description": "颜色使用次数",
      "minimum": 0,
      "defaultValue": 0
    },
    "create_time": {
      "bsonType": "timestamp",
      "description": "创建时间",
      "forceDefaultValue": {
        "$env": "now"
      }
    }
  }
}
